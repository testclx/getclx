    triggerBotKeyLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    triggerBotKeyLabel.TextSize = 12
    triggerBotKeyLabel.Font = Enum.Font.Gotham
    triggerBotKeyLabel.Parent = scrollingFrame

